<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1>Faites profiter de votre île</h1>

      <%= simple_form_for @island do |f| %>
        <%= f.input :name %>
        <%= f.input :description, as: :text %>
        <%= f.input :continent, collection: ["Afrique", "Asie", "Amérique du Sud", "Amérique du Nord", "Océanie", "Europe"] %>
        <%= f.input :availability, as: :boolean, checked_value: true, unchecked_value: false %>
        <%= f.input :price_per_day, as: :integer %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.button :submit, class: 'btn btn-primary' %>

      <% end %>
    </div>
  </div>
</div>





